<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MercadoFinderSelectableCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginEnd="@dimen/spacing"
    android:layout_marginBottom="@dimen/spacing_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/adapter_search_item_image_view_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/image_placeholder" />

        <Space
            android:layout_width="@dimen/spacing"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_search_item_text_view_price"
                style="@style/MercadoFinderHeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="$ 400" />

            <TextView
                android:id="@+id/adapter_search_item_text_view_title"
                style="@style/MercadoFinderSubHeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Samsung Galaxy S6" />

            <TextView
                android:id="@+id/adapter_search_item_text_view_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nuevo" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>